<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Only exclude style and experimental issues -->
    
    <!-- Style-related bugs - Optional -->
    <Match>
        <Bug category="STYLE" />
        <Not>
            <!-- Keep mandatory style checks -->
            <Bug pattern="SE_NO_SERIALVERSIONID,SE_BAD_FIELD,EQ_DOESNT_OVERRIDE_EQUALS" />
        </Not>
    </Match>

    <!-- Experimental bugs - Optional -->
    <Match>
        <Bug category="EXPERIMENTAL" />
    </Match>
</FindBugsFilter>